<?xml version="1.0" encoding="utf-8"?>
<!--O Drawer layout permite que a construção  visualizações interativas
    de "gaveta" sejam extraídas de uma ou ambas as bordas verticais da janela.-->
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/d1"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    app:titleTextColor="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="gitgaya.com.rssfeednews.MainActivity">

        <TextView
            android:id="@+id/simpleText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/projeto_de_computa_o_m_vel_rss_feed_news"
            android:textAlignment="center"
            android:textColor="#FAF6F6"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/simpleImageView"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:contentDescription="@string/start_image"
            android:src="@mipmap/logo" />

        <TextView
            android:id="@+id/simpleText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/disciplina_de_cmo_ispgaya_2019"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp"/>

    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_menu" >
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>